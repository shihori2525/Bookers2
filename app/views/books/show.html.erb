<div class="container">
  <div class"row">
    <%= render 'users/list', user:@user,book:@book %>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <tbody>
     <tr>
        <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
      </tr>

      <td>
        <% if @book.user == current_user %>
        <%= link_to 'Edit',edit_book_path(@book.id)%>
        <% end %>
      </td>
      <td>|</td>

      <td>
        <% if @book.user == current_user %>
        <%= link_to 'Destroy',books_path, method: :delete,"data-confirm" => "本当に消しますか" %>
        <% end %>
      </td>
     </tr>
     </tbody>
    </table>

  </div>
 </div>
</div>