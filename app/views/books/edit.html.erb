<div class="container">
  <div class="row">
    <h1>Editing Book</h1>

   <%= form_with model:@book,local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title,autofocus: true, id:"inputName" %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body,autofocus: true, id:"inputName" %>
      </div>

      <div class="form-group">
          <%= f.submit 'Update Book' %>
      </div>

    <% end %>

    <p> <%= link_to "Show",book_path(@book.id)%> | <%= link_to "Back",books_path %></p>

  </div>
</div>