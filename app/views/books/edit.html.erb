<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <div class="error_explanation">
        <div class="errors">
           <h3><%= pluralize(@book.errors.count, "error")%> prohibited this obj from being saved:</h3>
          </div>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= form_with model:@book,local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title,autofocus: true, id:"inputName" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body,autofocus: true, id:"inputName" %>
        </div>

        <div class="form-group">
            <%= f.submit 'Update Book' %>
        </div>

      <% end %>

      <p> <%= link_to "Show",book_path(@book.id)%> | <%= link_to "Back",books_path %></p>

   </div>
  </div>
 </div>
</main>