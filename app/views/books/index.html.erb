<div class="container">
 <div class="row">
 <%= render 'users/list', user:@user,book:@book %>
 <h2>Books</h2>
   <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>

   <tbody>
    <% @books.each do |book|%>
     <tr>
      <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
       </td>
       <td><%= book.body %></td>
      </tr>
      <% end %>
   </tbody>
  </table>
</div>




</div>