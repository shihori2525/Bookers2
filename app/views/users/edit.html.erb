<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h2>User info</h2>
         <% if @user.errors.any? %>
          <div class="error_explanation">
            <div class="errors">
              <h3><%= pluralize(@user.errors.count, "error")%> prohibited this obj from being saved:</h3>
            </div>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
           <label for="user_name">Name</label><br>
          <%= f.text_field :name,autofocus: true, id:"inputName" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label><br>
          <%= f.attachment_field:profile_image %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
           <%= f.submit 'Update User' %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</main>