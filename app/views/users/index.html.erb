
<div class="container">
  <div class="row">
    <%= render 'users/list', user:@user,book:@book %>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
            </thead>

            <tbody>
            <td><% @users.each do |user|%></td>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show",user_path(@user.id)%></td>
              <% end %>
            </tr>
            </tbody>

        </table>


   </div>
  </div>
</div>