<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'users/list', user:@user,book:@book %>
  <h4>Books</h4>
   <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            </thead>

            <tbody>
            <td><% @books.each do |book| %></td>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                <td>
                   <%= link_to book_path(book.id) do %>
                   <%= book.title %>
                   <% end %>
                  </td>

                <td><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>



 </div>
</div>
