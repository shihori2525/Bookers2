<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
     <table>
       <tbody>
       <tr>
         <th>name</th>
          <th><%= user.name %></th>
       </tr>
        <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
        </tr>
        </tbody>
     </table>

  <div class="row">
    <%= link_to "",edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  </div>


  <h2 class="mt-3">New book</h2>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <div class="errors">
      <ul>
        <%= pluralize(@book.errors.count, "error")%> prohibited this obj from being saved:
      </div>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


  <%= form_with model:book,local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
          <%= f.submit 'Creat Book' %>
      </div>
    <% end %>
  </div>

</div>
