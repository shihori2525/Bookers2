<div class="col-md-3">
    <h2>User info</h2>
      <div class="image">
        <%= attachment_image_tag user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
      </div>

     <table>
       <tbody>

       <tr>
         <th>name</th>
          <td><%= user.name %></td>
       </tr>

        <tr>
         <th>introduction</th>
         <td><%= user.introduction %></td>
        </tr>

        </tbody>
     </table>




  <div class="row">
    <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary", method: :get do  %>
     <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>


  <h2 class="mt-3">New book</h2>

  <%= form_with model:book,local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
          <%= f.submit 'Creat Book' %>
      </div>
    <% end %>
  </div>

</div>
